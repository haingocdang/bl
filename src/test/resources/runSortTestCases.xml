<?xml version="1.0" encoding="UTF-8"?>
<suite name="Saucelab Sort" parallel="tests" thread-count="2">
	<!-- GLOBAL URL -->
	<parameter name="url" value="https://www.saucedemo.com/inventory.html" />

	<listeners>
		<listener class-name="commons.MethodListener" />
		<!-- <ExtentV2.xx> -->
		<!-- <listener class-name="reportConfig.ExtentReportListener" /> -->
		<!-- <ExtentV3.xx> -->
		<!-- <listener class-name="reportConfig.ExtentTestListener" /> -->

		<!-- <ExtentV4.xx> -->
		<listener class-name="reportConfig.ExtentListener" />

		<listener class-name="org.uncommons.reportng.HTMLReporter" />
		<listener class-name="org.uncommons.reportng.JUnitXMLReporter" />
	</listeners>


	<test name="Run on Chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.saucelab.sort.Sort_Asc_Desc" />
		</classes>
	</test>

	<test name="Run on Firefox">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.saucelab.sort.Sort_Asc_Desc" />
		</classes>
	</test>

	<!-- <test name="Run on Firefox_headless"> <parameter name="browser" value="firefox_headless" /> <classes> <class name="com.saucelab.sort.Sort_Asc_Desc" /> </classes> </test> -->

</suite>
 